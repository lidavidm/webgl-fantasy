$ui-character-fg = #444

body
  margin 0
  padding 0

canvas
  -webkit-transform scale3d(2.0, 2.0, 1.0)
  -webkit-transform-origin 0 0 0
  margin auto
  display block
  position relative
  left -160px

#ui
  position absolute
  top 0
  left 50%
  margin-left -320px
  width 640px
  height 640px
  color #000
  font-family Cantarell, "Segoe UI", sans-serif
  font-size 18px
  display block

  .templ-character-overlay
    width 620px
    height 620px
    margin auto
    background-color #DDDDDDDD
    div.inner
      margin 0.25em

   div.topbar
     height 2em
     line-height 2em
     border-bottom 1px solid $ui-character-fg
     padding-bottom 0.25em
     h1
       font-family 'Open Sans Light', "Segoe UI", sans-serif
       color $ui-character-fg
       display inline-block
       font-weight normal
       margin 0
       font-size 1.5em
       height 100%
       line-height inherit
       padding-left 0.25em
       margin-right 1em
         
     .statbars
       height 100%
       line-height 100%
       display inline-block

div.statbar
  width 100px
  height 20px
  line-height 20px
  display inline-block
  margin 0
  color #FFF
    
  div
    margin 0
    padding 0
    height 100%
    line-height 100%
    font-variant small-caps

  span
    display block
    margin-top -20px

.statbar.health
  border 1px solid #F00
  div
    background-color #F00

.statbar.mana
  border 1px solid #00F
  div
    background-color #00F